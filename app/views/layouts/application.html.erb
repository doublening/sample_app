<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
<%= render 'layouts/stylesheets' %>
</head>
<body>
<div class="container">
	<div id="header">
		 <%= render 'layouts/header' %>
	</div>
    <div id="content" class="round">
      <% flash.each do |key,value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>	
	<%= render 'layouts/footer' %>
	<%=debug(params) if Rails.env.development?%>
</div>
</body>
</html>